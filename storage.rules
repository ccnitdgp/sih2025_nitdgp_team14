
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // -----------------------------
    // Helpers
    // -----------------------------
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isDoctor(uid) {
      return exists(/databases/(default)/documents/users/$(uid)) && get(/databases/(default)/documents/users/$(uid)).data.role == "doctor";
    }
    
    function isPatient(uid) {
      return exists(/databases/(default)/documents/users/$(uid)) && get(/databases/(default)/documents/users/$(uid)).data.role == "patient";
    }

    function isAdmin(uid) {
      return exists(/databases/(default)/documents/users/$(uid)) && get(/databases/(default)/documents/users/$(uid)).data.role == "admin";
    }
    
    // Efficiently checks if the requesting doctor is assigned to the patient.
    // This performs a single document read and is the authoritative check.
    function isAssignedDoctor(patientId) {
      let patientDoc = get(/databases/(default)/documents/users/$(patientId));
      return isSignedIn() && isDoctor(request.auth.uid) && request.auth.uid == patientDoc.data.doctorId;
    }

    // ---------------------------------
    // Doctor Verification Files
    //
    // path: doctor-verification/{doctorId}/{fileName}
    // Doctors can upload their own verification docs
    // Admin can read all
    // ---------------------------------
    match /doctor-verification/{doctorId}/{fileName} {
      allow write: if isSignedIn()
        && request.auth.uid == doctorId;

      allow read: if isSignedIn()
        && (
          request.auth.uid == doctorId ||
          isAdmin(request.auth.uid)
        );
    }


    // ---------------------------------
    // Patient Medical Documents
    //
    // path: patient_documents/{patientId}/{fileName}
    // Doctors can upload files for patients they are assigned to.
    // Patients can upload their own files.
    // ---------------------------------
    match /patient_documents/{patientId}/{fileName} {

      // Allow write if the user is the patient themselves, or the assigned doctor, or an admin.
      allow write: if isSignedIn() && (
        (isPatient(request.auth.uid) && request.auth.uid == patientId) ||
        isAssignedDoctor(patientId) ||
        isAdmin(request.auth.uid)
      );

      // Allow read if the user is the patient, their assigned doctor, or an admin.
      allow read: if isSignedIn()
        && (
          (isPatient(request.auth.uid) && request.auth.uid == patientId) ||
          isAssignedDoctor(patientId) ||
          isAdmin(request.auth.uid)
        );
    }


    // ---------------------------------
    // Block everything else
    // ---------------------------------
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
