
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // -----------------------------
    // Helpers
    // -----------------------------
    function isSignedIn() {
      return request.auth != null;
    }
    
    // In STORAGE rules we must use (default), NOT $(database)
    function userDoc(uid) {
      return get(/databases/(default)/documents/users/$(uid));
    }
    
    function isDoctor() {
      return isSignedIn() && userDoc(request.auth.uid).data.role == "doctor";
    }
    
    function isPatient() {
      return isSignedIn() && userDoc(request.auth.uid).data.role == "patient";
    }

    function isAdmin() {
      return isSignedIn() && userDoc(request.auth.uid).data.role == "admin";
    }

    function isDoctorAssignedToPatient(patientId) {
      let patientDoc = get(/databases/(default)/documents/users/$(patientId));
      return isDoctor() && patientDoc.data.doctorId == request.auth.uid;
    }

    // ---------------------------------
    // Doctor Verification Files
    //
    // path: doctor-verification/{doctorId}/{fileName}
    // Doctors can upload their own verification docs
    // Admin can read all
    // ---------------------------------
    match /doctor-verification/{doctorId}/{fileName} {

      // Doctor uploads own verification files
      allow write: if isSignedIn()
        && request.auth.uid == doctorId
        && isDoctor();

      // Doctor can read own docs, admin can read all
      allow read: if isSignedIn()
        && (
          request.auth.uid == doctorId ||
          isAdmin()
        );
    }


    // ---------------------------------
    // Patient Medical Documents
    //
    // path: patient_documents/{patientId}/{fileName}
    // Doctors can upload files for patients.
    // Patients can upload their own files.
    // ---------------------------------
    match /patient_documents/{patientId}/{fileName} {

      // Patient uploads own medical files.
      allow write: if isSignedIn()
        && request.auth.uid == patientId
        && isPatient();

      // ** SIMPLIFIED RULE **
      // Any authenticated doctor can upload files for a patient.
      // This is a more permissive rule for development to ensure the upload functionality works.
      // For production, you would tighten this to use `isDoctorAssignedToPatient(patientId)`.
      allow write: if isDoctor();

      // Patients can read own files.
      // The assigned doctor can read their patient's files.
      // Admins can read any file.
      allow read: if isSignedIn()
        && (
          (isPatient() && request.auth.uid == patientId) ||
          isDoctorAssignedToPatient(patientId) ||
          isAdmin()
        );
    }


    // ---------------------------------
    // Block everything else
    // ---------------------------------
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
